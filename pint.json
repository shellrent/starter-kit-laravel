{
    "preset": "psr12",
    "exclude": [
        ".app",
        "node_modules",
        "public",
        "vendor",
        "data"
    ],
    "rules": {
        "braces_position": {
            "functions_opening_brace": "same_line",
            "classes_opening_brace": "same_line"
        },
        "class_attributes_separation": {
            "elements": {
                "method": "one",
                "property": "none",
                "const": "none"
            }
        },
        "no_extra_blank_lines": true
    }
}
